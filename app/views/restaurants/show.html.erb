
<div class="d-flex justify-content-between align-items-center">
  <%= link_to restaurants_path, "class" => "btn btn-secondary mt-3" do %><i class="fa-solid fa-chevron-left"></i>  Back<% end %>
  <h1><%= @restaurant.name %></h1>
  <%= link_to new_restaurant_review_path(@restaurant), "class" => "btn btn-primary mt-3" do %><i class="fa-solid fa-plus"></i> Add review<% end %>
</div>
<br>
<div class="row g-0">
  <div class="p-3 border bg-light">
    <h2><%= @restaurant.name %></h2>
    <p><strong>Type :</strong> <%= @restaurant.category %></p>
    <p><strong>Address :</strong> <%= @restaurant.address %></p>
    <p><strong>Phone :</strong> <%= @restaurant.phone_number %></p>
    <p><strong>Reviews :</strong> <%= @restaurant.reviews.count %></p>
  </div>
</div>

<div class="container overflow-hidden g-0 mt-3">
  <div class="row g-3">
    <% @restaurant.reviews.each do |review| %>
      <div class="col-4">
        <p class="p-3 border bg-light h-100"><strong>Review #<%= review.id %></strong><br><%= review.content %><br><br>Rate : <%= review.rating %> / 5</p>
      </div>
    <% end %>
  </div>
</div>
